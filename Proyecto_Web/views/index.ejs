<%- include('partials/head', {title: 'Products'})%>
<%- include('partials/header')%>


<div class="container-fluid">
    <div class="row" id="filasPHome" >
        <div class="col-12">
            <h2 class="products-title">Vinos recomendados</h2> 
        </div>
        <% productosRecomendados.forEach(productoRecomendado => { %>
        <div class="col-12 col-sm-6 col-lg-3">
            <a href="/products/detail/<%= productoRecomendado.id %>">
            <section class="product-box">
                
                 <figure class="product-box_image">
                    <img src="/images/productos/<%= productoRecomendado.imagen%>" alt="imagen de producto">
                  </figure>
                 <article class="product-box_data">
                    <h2>$<%= productoRecomendado.precio %></h2>
                    <p><%= productoRecomendado.nombre %></p>
                    <i class=" fa fa-cart-plus fa-2x"></i>
                 </article>
                    
             </section>
            </a>
        </div>
        <% }); %>
    </div>
   
</div>









<%- include('partials/footer')%>





